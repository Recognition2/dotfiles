[include]
    path = ~/.gitconfig.local

[core]
    editor = vim

[commit]
    gpgsign = true

[tag]
    gpgsign = true
    forceSignAnnotated = true

[diff]
    tool = vimdiff

[alias]
    commit = commit -S
    d = difftool
	pa = "!for r in $(git remote); do git push $r ; done"
